{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "rootDirs": [
      "./src"
    ], 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "migrations"
  ]
}
